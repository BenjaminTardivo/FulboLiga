    {
      "name": "Development",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${config:api.build}",
      "cwd": "${config:api.path}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "justMyCode": true,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Staging",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${config:api.build}",
      "cwd": "${config:api.path}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "justMyCode": true,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Staging"
      }
    },
    {
      "name": "Production",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${config:api.build}",
      "cwd": "${config:api.path}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "justMyCode": true,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production"
      }
    },
    {
      "name": "Swagger",
      "type": "chrome",
      "request": "launch",
      "url": "${config:swagger.url}",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--force-dark-mode",
        "--new-window"
      ]
    },
  ],
